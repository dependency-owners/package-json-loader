{
  "name": "@dependency-owners/package-json-loader",
  "version": "0.0.0-development",
  "description": "dependency-owners loader for package.json files",
  "author": "Kirk Eaton <contact@kirkeaton.ca>",
  "bugs": {
    "url": "https://github.com/dependency-owners/package-json-loader/issues"
  },
  "devDependencies": {
    "@kirkeaton/prettier-config": "1.0.5",
    "@kirkeaton/semantic-release-config": "1.0.4",
    "@kirkeaton/tsconfig": "1.0.3",
    "@types/node": "24.3.0",
    "dependency-owners": "1.1.1",
    "fs-fixture": "2.8.1",
    "prettier": "3.6.2",
    "semantic-release": "24.2.7",
    "tsx": "4.20.4",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=20"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "funding": "https://kirkeaton.ca/sponsor",
  "homepage": "https://github.com/dependency-owners/package-json-loader#readme",
  "keywords": [
    "dependency",
    "owners",
    "package",
    "json",
    "loader"
  ],
  "license": "BSD-3-Clause",
  "packageManager": "pnpm@10.14.0",
  "peerDependencies": {
    "dependency-owners": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dependency-owners/package-json-loader.git"
  },
  "scripts": {
    "build": "pnpm clean && tsc",
    "clean": "rm -rf dist",
    "format": "prettier \"**/*.{js,json,md,ts}\" --write",
    "lint": "prettier \"**/*.{js,json,md,ts}\" --check",
    "prepublishOnly": "pnpm build",
    "test": "tsx --test",
    "typecheck": "tsc --noEmit"
  },
  "type": "module"
}
