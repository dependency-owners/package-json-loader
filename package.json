{
  "name": "@dependency-owners/package-json-loader",
  "version": "0.0.0-development",
  "description": "dependency-owners loader for package.json files",
  "author": "Kirk Eaton <contact@kirkeaton.ca>",
  "bugs": {
    "url": "https://github.com/dependency-owners/package-json-loader/issues"
  },
  "devDependencies": {
    "@kirkeaton/prettier-config": "1.0.6",
    "@kirkeaton/tsconfig": "2.1.1",
    "@types/node": "24.10.11",
    "dependency-owners": "3.0.4",
    "fs-fixture": "2.11.0",
    "prettier": "3.8.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "funding": "https://kirkeaton.ca/sponsor",
  "homepage": "https://github.com/dependency-owners/package-json-loader#readme",
  "keywords": [
    "dependency",
    "owners",
    "package",
    "json",
    "loader"
  ],
  "license": "BSD-3-Clause",
  "peerDependencies": {
    "dependency-owners": ">=1.2.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dependency-owners/package-json-loader.git"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "format": "prettier \"**/*.{js,json,md,ts}\" --write",
    "lint": "prettier \"**/*.{js,json,md,ts}\" --check",
    "prepublishOnly": "npm run build",
    "test": "node --test",
    "typecheck": "tsc --noEmit"
  },
  "type": "module"
}
